{
  "name": "wifi-transfer-tool",
  "version": "1.0.0",
  "description": "A simple tool to transfer files or text to mobile via WiFi",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . \"WiFi Transfer\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=src/assets/ico.ico"
  },
  "build": {
    "appId": "com.wifitransfer.tool",
    "productName": "WiFi Transfer",
    "win": {
      "target": "dir"
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "ip": "^1.1.8",
    "multer": "^2.0.2",
    "qrcode": "^1.5.3",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2",
    "png2icons": "^2.0.1"
  }
}
